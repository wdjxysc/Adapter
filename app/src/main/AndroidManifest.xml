<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dijun.adapter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".ArrayAdapterActivity" />
        <activity android:name=".SimpleAdapterActivity" />
        <activity android:name=".ArrayAdapter1Activity" />
        <activity android:name=".ArrayAdapter2Activity" />
        <activity android:name=".BaseAdapterActivity" />
        <activity android:name=".RecycleViewActivity" />
        <activity android:name=".ui.DialogActivity" />
        <activity android:name=".ui.NotificationActivity" />
        <activity android:name=".net.NetActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 添加theme标签设置不需要ActionBar -->
        <activity
            android:name=".ui.ToolbarTestActivity"
            android:theme="@style/AppTheme.Base">

        </activity>
    </application>

</manifest>